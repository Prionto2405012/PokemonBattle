<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  Start/Splash Screen
  Shows game title and loading message, then auto-transitions to welcome screen
-->
<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pokemonbattle.controller.StartController"
      style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">
  <padding>
    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
  </padding>

  <!-- Game Title -->
  <Label fx:id="titleLabel" text="POKEMON BATTLE" styleClass="title-label"/>

  <!-- Loading Message -->
  <Label fx:id="loadingLabel" text="Loading..." styleClass="subtitle-label"/>

  <!-- Skip Button (optional - allows skipping splash screen) -->
  <Button text="Press to Start" onAction="#onStartButtonClick" styleClass="button-orange"/>
</VBox>
