<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox accessibleRole="IMAGE_VIEW" alignment="CENTER" minHeight="600" minWidth="800" spacing="30.0" styleClass="start-container" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pokemonbattle.controller.StartController">
  <children>

    <StackPane fx:id="rootPane" VBox.vgrow="ALWAYS">

        <!-- Background image -->
        <ImageView fx:id="bgImage"
                   preserveRatio="false"
                   pickOnBounds="true">
            <image>
                <Image url="@../assets/start_bg.png"/>
            </image>
        </ImageView>

        <!-- Centered Start Button -->
        <Button text="Press to Start"
                onAction="#onStartButtonClick"
                prefWidth="300"
                prefHeight="70"
                styleClass="button-orange"/>
    </StackPane>

</children>

</VBox>
